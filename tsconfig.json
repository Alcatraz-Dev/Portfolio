{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/Shear/WebShare.tsx",
    "components/DarkMode/DarkMode.tsx",
    "components/AboutSection/AboutSection.tsx",
    "components/Certificate/Certificate.tsx",
    "components/SkillsSection/Skills.tsx",
    "components/SkillsSection/Skills.tsx",
    "components/ProjectsSection/ProjectSearchBar.jsx",
    "components/ProjectsSection/ProjectSearchFilter.jsx",
    "components/Status/StatusProgresBar.jsx",
    "app/(user)/resume/page.tsx",
    "lib/dynamicScriptLoader.js",
    "lib/utils.js",
    "lib/snarkdown.js",
    "components/CommentSection/AddComment/SubmitMessage.jsx",
    "components/CommentSection/AddComment/InputError.jsx",
    "components/CommentSection/Comments/AllComments.jsx",
    "components/CommentSection/Comments/CommentImage.jsx",
    "components/CommentSection/Comments/SingleComment.jsx",
    "components/CommentSection/Emoji/ReactionBlock.jsx",
    "components/CommentSection/AddComment/ImageUpload.jsx",
    "components/CommentSection/AddComment/AddCommentForm.jsx",
    "pages/api/addReaction.js"
  ],
  "exclude": ["node_modules"]
}
